{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "lib": [
            "es2022",
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [
        "**/dist",
        "**/node_modules",
        "**/test"
    ]
}